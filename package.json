{
  "name": "GTC-backend",
  "version": "1.0.0",
  "description": "Green Candle Token (GTC) Backend API with Express.js and MongoDB",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "deploy:dev": "node deploy.js development",
    "deploy:staging": "node deploy.js staging",
    "deploy:prod": "node deploy.js production",
    "build": "npm run lint && npm test",
    "postinstall": "node -e \"console.log('GCT Token Backend installed successfully')\"",
    "health": "./health-check.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop gct-backend",
    "pm2:restart": "pm2 restart gct-backend",
    "pm2:logs": "pm2 logs gct-backend",
    "docker:build": "docker build -t gct-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "GTC",
    "token",
    "blockchain",
    "express",
    "mongodb",
    "bsc"
  ],
  "author": "GTC Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.11",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "axios": "^1.12.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "puppeteer": "^24.20.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
